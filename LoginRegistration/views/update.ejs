<!DOCTYPE html>
<html>
<head>
  <title>Edit Item</title>
</head>
<body>
  <h1>Edit Item</h1>

  <form action="/update-item" method="POST">
    <!-- Hidden input to store item ID -->
    <input type="hidden" name="item_id" value="<%= item.id %>">

    <div>
      <label for="item_name">Food Item Name:</label>
      <input type="text" name="item_name" id="item_name" value="<%= item.name %>" required>
    </div>

    <div>
      <label for="price">Price:</label>
      <input type="number" step="0.01" name="price" id="price" value="<%= item.price %>" required>
    </div>

    <div>
      <label for="description">Description:</label><br>
      <textarea name="description" id="description" rows="4" cols="50" required><%= item.description %></textarea>
    </div>

    <div>
      <button type="submit">Update Food Item</button>
    </div>
  </form>
</body>
</html>
